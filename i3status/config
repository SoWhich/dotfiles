# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ÃŸ
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 3
}

#order += "ipv6"
order += "cpu_usage"
order += "load"
order += "disk /"
order += "disk /home"
#order += "run_watch DHCP"
#order += "run_watch VPN"
order += "wireless wlp4s0"
order += "volume master"
#order += "ethernet eth0"
order += "battery 0"
order += "tztime date"
order += "tztime local"

wireless wlp4s0 {
	format_up = "W: (%ip) %quality"
	format_down = "W: down"
}

ethernet eth0 {
        # if you use %speed, i3status requires root privileges
	format_up = "E: %ip (%speed)"
	format_down = "E: down"
}

battery 0 {
	format = "%status %percentage %remaining"
	status_chr = "âš¡"
	status_bat = "ğŸ”‹"
	status_unk = "?"
	status_full = "â—"
}

run_watch DHCP {
	pidfile = "/var/run/dhclient*.pid"
}

run_watch VPN {
	pidfile = "/var/run/vpnc/pid"
}

tztime date {
	format = "%A, %b %d"
}

tztime local {
	format = "%I:%M %p"
}

disk "/" {
        format = "âˆš %avail"
}

disk "/home" {
	format = "âŒ‚ %avail"
}

cpu_usage {
	format = "ğŸ• %usage"
}

volume master {
	format = "ğŸ”Š %volume%"
	format_muted = "ğŸ”‡"
	device = "pulse"
}

load {
	format = "%5min"
}
